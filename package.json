{
  "name": "cloud-resume-challenge",
  "version": "1.0.0",
  "description": "Cloud Resume Challenge implementation with AWS",
  "scripts": {
    "start": "live-server",
    "build": "npm run optimize:css && npm run optimize:js && npm run optimize:html",
    "optimize:css": "postcss stylesheet.css -o dist/stylesheet.css",
    "optimize:js": "terser scripts.js -o dist/scripts.js",
    "optimize:html": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true index.html -o dist/index.html",
    "test": "cypress run",
    "test:open": "cypress open"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "cypress": "^13.0.0",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.27",
    "postcss-cli": "^10.1.0",
    "terser": "^5.19.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/majorasfand/cloud-resume-challenge-an.git"
  },
  "author": "Asfand Naveed",
  "license": "MIT"
} 